-################-
-# HERO SECTION #-
-################-
%section.hero.is-primary
    %div(class="hero-body is-flex is-flex-direction-column |
    is-align-items-center has-text-centered") |
        %figure.image.is-128x128.is-inline-block
            %img.is-square(src="assets/logo-big.svg" alt="Logo")/
        %h1.title.is-1 Ayson Audio
        %h3.subtitle.is-3 sound designer, composer, developer

-#################-
-# PORTFOLIO SPA #-
-#################-
%section#tabs
    .tabs.is-centered
        %ul
            - current_page.data.tabs.each do |k,v|
                = partial "parts/tab", locals: {a_class:k, label:v.label, icon:v.icon}

%section.px-5#reels
    - reels_icon = current_page.data.tabs.reels.icon
    = partial "blocks/nav", locals: {pages:3, type:"reel", icon:reels_icon}

    - current_page.data.reels.each_with_index do |reel, index|
        - id = "reel-" + index.to_s
        .is-flex.is-flex-direction-column.is-align-items-center.mt-5.mb-6(id=id)
            = partial "blocks/panel", locals: reel

%section.px-5#projects
    - projects_icon = current_page.data.tabs.projects.icon
    = partial "blocks/nav", locals: {pages:3, type:"project", icon:projects_icon}

    - current_page.data.projects.each_with_index do |project, index|
        - id = "project-" + index.to_s
        .is-flex.is-flex-direction-column.is-align-items-center.mt-5.mb-6(id=id)
            = partial "blocks/panel", locals: project
            = partial "blocks/showcase", locals: project
